const showcases = [
  {
    highlight: "Syllabus",
    title: "Stay Ahead with the Latest Syllabus",
    description:
      "Keep up with the ever-evolving BSc.CSIT curriculum. We provide the latest syllabus updates and detailed course structures so you can plan your studies with confidence.",
    image: {
      src: "/assets/features1.png",
      alt: "Syllabus",
    },
    items: [
      "Direct downloads of the latest syllabi.",
      "Course breakdown with credit hours.",
      "Semester-wise subject listings.",
    ],
    primaryAction: {
      label: "Explore",
      url: "/semesters",
    },
    secondaryAction: {
      label: "View Curriculum",
      url: "/curricular-structure",
    },
  },
  {
    highlight: "Questions",
    title: "Boost Your Exam Preparation",
    description:
      "Access a rich archive of past question papers from various semesters. Practice makes perfect—get familiar with exam patterns and question styles to enhance your performance.",
    image: {
      src: "/assets/features2.png",
      alt: "Study resources",
    },
    items: [
      "Question papers sorted by year and semester.",
      "Downloadable PDF format for easy access.",
      "Model questions.",
    ],
    primaryAction: {
      label: "Explore",
      url: "/semesters",
    },
    secondaryAction: undefined,
  },
  {
    highlight: "Colleges",
    title: "Discover Top BSc.CSIT Colleges",
    description:
      "Browse through a curated list of Tribhuvan University-affiliated colleges offering BSc.CSIT. Compare institutions based on location, facilities, and academic performance to find the best fit for you.",
    image: {
      src: "https://images.unsplash.com/photo-1470549638415-0a0755be0619?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
      alt: "Study resources",
    },
    items: [
      "Admission requirements and procedures.",
      "Detailed profiles of each college (Coming Soon).",
      "User ratings and reviews (Coming Soon).",
    ],
    primaryAction: {
      label: "Explore",
      url: "/colleges",
    },
    secondaryAction: {
      label: "Admission Procedure",
      url: "about#admission-criteria",
    },
  },
];
---

<!-- Layout:start -->
<Layout title="">
  <!-- Container:start -->
  <Container>
    <!-- Hero Area:start -->
    <Hero />
    <!-- Hero Area:end -->

    <!-- Features:start -->
    <Features data={homeFeatures} />
    <!-- Features:end -->

    <!-- Spacer:start -->
    <div class="min-h-20"></div>
    <!-- Spacer:end -->

    <!-- Showcases:start -->
    {
      showcases &&
        showcases.map((showcase, index) => (
          // Showcase layout is determined by the index,
          // if the index is even, the layout is "image-left",
          // otherwise, the layout is "image-right"
          <Showcase layout={index % 2 === 0 ? "image-left" : "image-right"} data={showcase} />
        ))
    }
    <!-- Showcases:end -->
  </Container>
  <!-- Container:end -->
</Layout>
<!-- Layout:end -->
